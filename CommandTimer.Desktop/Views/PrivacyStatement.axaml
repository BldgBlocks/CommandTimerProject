<UserControl x:Class="CommandTimer.Desktop.Views.PrivacyStatement"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="350"
             Height="300"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="Transparent"
             ZIndex="1001"
             mc:Ignorable="d">


    <Border Name="RootBorder"
            Margin="0"
            Padding="10,10,18,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{DynamicResource ApplicationBrush_Background}"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="16">

        <DockPanel>
            <TextBlock Name="HeaderText"
                       Padding="0,5,0,5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Top"
                       FontSize="{DynamicResource ApplicationFontSize_Header}"
                       FontWeight="{DynamicResource ApplicationFontWeight_Medium}"
                       Text="Privacy Statement"
                       TextAlignment="Center" />

            <TextBlock Name="Body1Text"
                       Padding="0,5,0,5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Stretch"
                       DockPanel.Dock="Top"
                       FontSize="{DynamicResource ApplicationFontSize_Label}"
                       FontWeight="{DynamicResource ApplicationFontWeight_Medium}"
                       Text="The CommandTimer app respects your privacy. No usage data is collected and the app does not access the internet."
                       TextAlignment="Center"
                       TextWrapping="Wrap" />

            <TextBlock Name="Body2Text"
                       Padding="0,5,0,5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Stretch"
                       DockPanel.Dock="Top"
                       FontSize="{DynamicResource ApplicationFontSize_Label}"
                       FontWeight="{DynamicResource ApplicationFontWeight_Medium}"
                       Text=""
                       TextAlignment="Center"
                       TextWrapping="Wrap" />

            <StackPanel Margin="0,20,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        Spacing="80">

                <Button Name="QuitButton"
                        Width="100"
                        Height="30"
                        HorizontalContentAlignment="Center"
                        Background="{DynamicResource ApplicationBrush_Contrast}"
                        Click="Click_QuitButton"
                        Content="Quit"
                        FontSize="{DynamicResource ApplicationFontSize_Text}"
                        FontWeight="{DynamicResource ApplicationFontWeight_Medium}" />

                <Button Name="ProceedButton"
                        Width="100"
                        Height="30"
                        HorizontalContentAlignment="Center"
                        Background="{DynamicResource ApplicationBrush_Contrast}"
                        Click="Click_ProceedButton"
                        Content="Okay"
                        FontSize="{DynamicResource ApplicationFontSize_Text}"
                        FontWeight="{DynamicResource ApplicationFontWeight_Medium}" />
            </StackPanel>

            <TextBlock Name="Body3Text"
                       Padding="0,5,0,5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       DockPanel.Dock="Bottom"
                       FontSize="{DynamicResource ApplicationFontSize_Text}"
                       FontWeight="{DynamicResource ApplicationFontWeight_Heavy}"
                       Text="Use of this software constitutes agreement to these terms."
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </DockPanel>
    </Border>
</UserControl>
